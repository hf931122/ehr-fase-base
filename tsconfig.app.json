{
  "extends": "@vue/tsconfig/tsconfig.node.json",
  "include": [
    "env.d.ts",
    "typings/global.d.ts",
    "packages/**/*.ts",
    "packages/**/*.d.ts",
    "packages/**/*.tsx",
    "packages/**/**/*.vue",
    "./*.d.ts",
    "packages/util/loading/loading.js"  ],
  "exclude": ["src", "node_modules"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "lib": ["./lib/*"]
    }
  }
}
